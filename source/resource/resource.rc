#include <windows.h>
#include "Version.h"

//------------------------------------
// Ikona
Icon ICON "resource/icon.ico"

//------------------------------------
// Informacje o wersji
VS_VERSION_INFO VERSIONINFO
FILEVERSION		VERSION_PACKED
PRODUCTVERSION 	VERSION_PACKED
FILEFLAGSMASK  	VS_FFI_FILEFLAGSMASK
FILEFLAGS      	RELEASE_TYPE
FILEOS         	VOS__WINDOWS32
FILETYPE       	VFT_APP
FILESUBTYPE    	VFT2_UNKNOWN
BEGIN
	BLOCK "StringFileInfo"
	BEGIN
		BLOCK "040904E4"
		BEGIN
			VALUE "FileVersion", VERSION_STR
			VALUE "ProductVersion", VERSION_STR
			VALUE "Comments", "http://carpg.pl"
			VALUE "FileDescription", "Role Playing Simulation"
			VALUE "LegalCopyright", "Devmode(2013,2015) Tomashu & Leinnan"
#ifdef IS_DEBUG
#	ifdef DEV_BUILD
			VALUE "OriginalFilename", "carpg_ddev.exe"
#	else
			VALUE "OriginalFilename", "carpg_d.exe"
#	endif
#else
#	ifdef DEV_BUILD
			VALUE "OriginalFilename", "carpg_dev.exe"
#	else
			VALUE "OriginalFilename", "carpg.exe"
#	endif
#endif
			VALUE "ProductName", "CaRpg"
#ifdef IS_DEBUG
			VALUE "PrivateBuild", "Debug version"
#endif
		END
	END
	BLOCK "VarFileInfo"
	BEGIN
		VALUE "Translation", 0x0409, 1252, 0x0415, 1252
	END
END
